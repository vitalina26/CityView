@model CityView.Event

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання події до міста @ViewBag.CityName</h1>

<h4>Подія</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionInfo" class="control-label"></label>
                <input asp-for="DescriptionInfo" class="form-control" />
                <span asp-validation-for="DescriptionInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contacts" class="control-label"></label>
                <input asp-for="Contacts" class="form-control" />
                <span asp-validation-for="Contacts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDay" class="control-label"></label>
                <input asp-for="EventDay" class="form-control" />
                <span asp-validation-for="EventDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" value="@ViewBag.CityId" name="CityId" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
